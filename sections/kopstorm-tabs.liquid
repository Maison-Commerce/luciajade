<style>
  
.section-container{{ section.id }} {
  padding-top: {{ section.settings.padding-top-desktop }}px!important;
  padding-bottom: {{ section.settings.padding-bottom-desktop }}px!important;
}

 .section-container{{ section.id }}  .accordion-item.active .accordion-content  {
    display: block;
  }
  

 .section-container{{ section.id }}   .section-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}


 .section-container{{ section.id }} .left-content {
  width: 50%;
  padding-right: 20px;
}


 .section-container{{ section.id }} .right-content {
  width: 50%;
}


 .section-container{{ section.id }} .accordion {
      border-bottom: 0px;
}

 
 .section-container{{ section.id }}  .accordion-item:last-child {
  border-bottom: 0px solid #ccc;
}


 .section-container{{ section.id }} .accordion-item {
  border-bottom: 1px solid #ccc;
}


 .section-container{{ section.id }} .accordion-header {
display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 5px;
    background-color: #f1f1f100;
    cursor: pointer;
    text-align: left;
    padding-left: 0;
}


 .section-container{{ section.id }} .accordion-header .icon-img {
  margin-right: 10px;
     display: flex;
 width: auto;
    height: 25px;
}


 .section-container{{ section.id }} .accordion-content {
  padding: 10px;
  display: none;    padding-top: 0px;
}


 .section-container{{ section.id }} .accordion-toggle {
  transition: transform 0.3s ease;
}


 .section-container{{ section.id }} .accordion-item.active .accordion-toggle {
  transform: rotate(180deg);
}

  
 .section-container{{ section.id }} .section-box {
        display: flex;
    background: #551116;
    padding: 50px;
    gap: 100px;
    border-radius: 15px;
    color: white;
  }

 
 .section-container{{ section.id }}  .accordion-icons {
    display: flex;
    align-items: center;
    gap: 8px;
  }

 
 .section-container{{ section.id }}  .accordion-icons p {
    margin: 0px!important;
  }

 
 .section-container{{ section.id }}  .section-container h3 {
    margin-top: 0px;
  }


@media (max-width: 768px) {
  .section-container{{ section.id }} {
  padding-top: {{ section.settings.padding-top-mobile }}px!important;
  padding-bottom: {{ section.settings.padding-bottom-mobile }}px!important;
}

 .section-container{{ section.id }}   .section-container h4{
        font-size: 18px;
  }

 .section-container{{ section.id }} .left-content {
  width: 100%;
  padding-right: 0px;
}


 .section-container{{ section.id }} .right-content {
  width: 100%;
}

 
 .section-container{{ section.id }}  .accordion-header .icon-img {
      margin-right: 5px;
    display: flex;
    width: auto;
    height: 20px;
}


 
 .section-container{{ section.id }}  .section-box {
        display: flex;
        background: #551116;
        padding: 30px;
        gap: 25px;
        border-radius: 15px;
        color: white;
        flex-direction: column;
}
}
</style>

