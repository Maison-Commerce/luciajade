    padding: 1.5rem;
    border-radius: 8px;
    position: sticky;
    top: 20px;
    border: 1px solid var(--color-border);
  }

  .bundle-product-card {
    background: #ffffff;
    border-radius: var(--bundle-card-radius);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    box-shadow: 0 var(--bundle-card-shadow) calc(var(--bundle-card-shadow) * 2) rgba(0, 0, 0, 0.1);
