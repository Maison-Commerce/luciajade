  document.addEventListener('DOMContentLoaded', () => {
    // Prevent default cart form submission
    document.addEventListener('submit', (e) => {
      if (e.target.action && e.target.action.includes('/cart/add')) {
        e.preventDefault();
      }
    });
  });
